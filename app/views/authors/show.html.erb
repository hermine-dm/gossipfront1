<h1 class ="ml-3 mt-3">Voici l'auteur n=<%= params[:id].to_i %></h1>
<p class ="ml-3 h5">
	L'auteur: <%= @author.first_name %> <%= @author.last_name %> <br/> 
	Son age: <%= @author.age %> <br/> 
	Son email: <%= @author.email %> <br/> 
	Ses potins: 
	<% @author.gossips.to_a.each do |gsp| %> 
	<ul class="h6">
		<li> Le titre: <%= gsp.title %> </li>
		<li> Le lien: <%= link_to "ici", gossip_path(gsp.id) %> </li>
   	</ul>
	<% end %>

	
</p>