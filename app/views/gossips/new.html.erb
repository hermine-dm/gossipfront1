<html>
  <body>
    <% if @gossip !=nil%>
      <div class="alert alert-danger" role="alert">
        <p id="alert"><%= flash.now[:alert] %></p>
      </div>
    <% end %>
    
    <div class="container">
      <h1> Cr√©er ton nouveau potin !</h1>
      <%= form_tag url_for(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <br /> 
       
          <%= text_field_tag 'gossip_title' %>
          <%= label_tag 'Le titre' %>
    
        <br /> 
        
          <%= text_field_tag 'gossip_content'%>
          <%= label_tag 'Dis nous tout' %>
        
        <br /> <br />
        <%= submit_tag "Valider", class: 'btn btn-primary btn-lg btn-submit'  %>
      <% end %>
    </div>
  </body>
</html>
