<html>
  <body>
    <% if @gossip !=nil%>
      <div class="alert alert-danger" role="alert">
        <p id="alert"><%= flash.now[:alert] %></p>
      </div>
    <% end %>

    <div class="container">
      <h1> Editer ton potin !</h1>

      <%= form_for @gossip do |f| %>
        <div class="form-group">   
            <%= f.text_field :title, class:'form_control' %>
            <%= label_tag 'Le titre' %>
        </div>
        <div class="form-group"> 
            <%= f.text_field :content, class:'form_control' %>
            <%= label_tag 'Allez modifie' %>
        </div>  
        <div class="form-group">
        <%= submit_tag "Modifier", class: 'btn btn-primary btn-lg btn-submit'  %>
      <% end %>
    </div>
  </body>
</html>